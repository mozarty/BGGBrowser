<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.home.HomeFragment">

    <com.todkars.shimmer.ShimmerRecyclerView
        android:id="@+id/shimmerRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:listitem="@layout/list_item_shimmer_layout"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shimmer_recycler_duration="1500"
        app:shimmer_recycler_highlight_alpha="0.5"
        app:shimmer_recycler_colored="false"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_recycler_highlight_color="@color/white"
        app:shimmer_recycler_item_count="12"
        app:shimmer_recycler_layout="@layout/list_item_shimmer_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>